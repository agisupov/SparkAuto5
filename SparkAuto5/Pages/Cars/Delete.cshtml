@page
@model SparkAuto5.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Delete Car";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Delete Car</h2>
<br />

 <form method="post">
     <div class="border background-white">
         <input hidden asp-for="Car.UserId" />
         <input type="hidden" asp-for="Car.Id" />
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.VIN"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.VIN" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.VIN" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.Make"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.Make" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.Make" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.Model"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.Model" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.Model" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.Style"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.Style" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.Style" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.Year"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.Year" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.Year" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.Kilometers"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.Kilometers" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.Kilometers" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="Car.Color"></label>
             </div>
             <div class="col-5">
                 <input asp-for="Car.Color" disabled class="form-control"/>
             </div>
             <span asp-validation-for="Car.Color" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-5 offset-2">
                 <partial name="_DeleteAndBackToListButton" />
             </div>
         </div>
     </div>
 </form>

 @section Scripts{
      @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
 }