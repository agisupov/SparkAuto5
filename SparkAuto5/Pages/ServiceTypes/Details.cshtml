@page
@model SparkAuto5.Pages.ServiceTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
 <h2 class="text-info">Details Service Type</h2>
 <br />

 <form method="get">
     <div class="border background-white">
         <input type="hidden" asp-for="ServiceType.Id" />
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ServiceType.Name"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ServiceType.Name" disabled="true" class="form-control"/>
             </div>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ServiceType.Price"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ServiceType.Price" disabled="true" class="form-control"/>
             </div>
         </div>
         <div class="form-group row">
             <div class="col-5 offset-2">
                 <partial name="_BackToListButton" />
             </div>
         </div>
     </div>
 </form>
