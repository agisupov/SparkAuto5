@page
@model SparkAuto5.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info pt-2 pb-3">Delete Customer</h2>
<form method="post">
     <div class="border background-white">
         <input type="hidden" asp-for="ApplicationUser.Id" />
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ApplicationUser.Name"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ApplicationUser.Name" disabled="true" class="form-control"/>
             </div>
             <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ApplicationUser.Email"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ApplicationUser.Email" disabled="true" class="form-control"/>
             </div>
             <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ApplicationUser.PhoneNumber"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ApplicationUser.PhoneNumber" disabled="true" class="form-control"/>
             </div>
             <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ApplicationUser.Address"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ApplicationUser.Address" disabled="true" class="form-control"/>
             </div>
             <span asp-validation-for="ApplicationUser.Address" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ApplicationUser.City"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ApplicationUser.City" disabled="true" class="form-control"/>
             </div>
             <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="ApplicationUser.PostalCode"></label>
             </div>
             <div class="col-5">
                 <input asp-for="ApplicationUser.PostalCode" disabled="true" class="form-control"/>
             </div>
             <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
         </div>
         <div class="form-group row">
             <div class="col-5 offset-2">
                 <partial name="_DeleteAndBackToListButton" />
             </div>
         </div>
     </div> 
 </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
